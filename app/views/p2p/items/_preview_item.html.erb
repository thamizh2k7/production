        $("#itemfavourite").click(function(){
            $.ajax({
                url:'/p2p/favourites',
                data:{itemid:window.item_id},
                type:"post",
                dataType:"json",
                success:function(data){
                    if (data.status == 1){
                        if (data.fav ==1 ){
                          $("#itemfavourite i ").addClass('already_fav');
