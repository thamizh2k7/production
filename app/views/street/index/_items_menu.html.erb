<!-- browse menu across p2p -->
<div class="dropdown">
	<a class="dropdown-toggle " data-toggle="dropdown" href="#">
		<div class="menu_title">Select a Category</div>
	</a>
	<ul class="dropdown-menu " role="menu" aria-labelledby="dLabel" id="menu_categories">
		<% P2p::Category.where("category_id is null").each do |cat| %>
			<% if cat.subcategories.count > 0 %>
				<li class="dropdown-submenu">
					<a href="<%=make_category_url(cat)%>"><%= cat.name %> </a>

					<ul class="dropdown-menu">
						<% cat.subcategories.order("priority").each do |scat| %>
						<li> <a href="<%=make_category_url(scat)%>"><%= scat.name %></a></li>
						<% end %>
					</ul>
				</li>
			<% else %>
				<li class="menu_element">
					<a href="<%=make_category_url(cat)%>"><%= cat.name %> </a>
				</li>
			<%end%>
		<% end %>
	</ul>
	<br/>
	<div class="clearfix"></div>
</div>
